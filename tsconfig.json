{
    "compilerOptions": {
        "module": "ES6",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "target": "ES6",
        "esModuleInterop": true,
        "lib": [
            "ES2023",
            "DOM"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
            "target": "ES6"
        },
        "transpileOnly": true,
        "files": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./*.ts",
        "./**/*.ts",
        "./*.d.ts",
        "./*.mjs"
    ]
}